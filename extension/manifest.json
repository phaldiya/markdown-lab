{
  "manifest_version": 3,
  "name": "Markdown Lab",
  "version": "1.0.0",
  "description": "View and edit Markdown files with live preview, GFM, LaTeX math, Mermaid diagrams, and syntax highlighting â€” right in your browser sidebar.",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "permissions": ["sidePanel", "activeTab", "contextMenus", "storage"],
  "host_permissions": ["file:///*", "<all_urls>"],
  "action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png"
    },
    "default_title": "Open Markdown Lab"
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'unsafe-eval'; object-src 'self'"
  }
}
