{
  "name": "markdown-lab",
  "private": true,
  "version": "1.1.1",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "biome check --write .",
    "lint:check": "biome check .",
    "format": "biome format --write .",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:smoke": "vitest run tests/smoke/",
    "test:deep": "vitest run tests/deep/",
    "test:coverage": "vitest run --coverage",
    "build:extension": "vite build --config vite.config.extension.ts",
    "verify": "vitest run && playwright test",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:functional": "playwright test --project=functional",
    "e2e:visual": "playwright test --project=visual-desktop --project=visual-tablet --project=visual-mobile",
    "e2e:update-snapshots": "playwright test --project=visual-desktop --project=visual-tablet --project=visual-mobile --update-snapshots",
    "extension:icons": "bun run scripts/generate-icons.ts",
    "extension:zip": "bun run scripts/package-extension.ts",
    "setup-hooks": "sh ./scripts/setup-hooks.sh all"
  },
  "dependencies": {
    "@codemirror/lang-markdown": "^6.3.2",
    "@codemirror/language-data": "^6.5.1",
    "@uiw/react-codemirror": "^4.23.10",
    "dompurify": "^3.3.1",
    "hast-util-to-html": "^9.0.5",
    "katex": "^0.16.28",
    "mermaid": "^11.6.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.13.0",
    "rehype-highlight": "^7.0.2",
    "rehype-katex": "^7.0.1",
    "rehype-raw": "^7.0.0",
    "rehype-sanitize": "^6.0.0",
    "rehype-slug": "^6.0.0",
    "rehype-stringify": "^10.0.1",
    "remark-emoji": "^5.0.1",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.1",
    "unified": "^11.0.5",
    "unist-util-visit": "^5.0.0",
    "yaml": "^2.7.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.14",
    "@playwright/test": "^1.58.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@tailwindcss/vite": "^4.1.18",
    "@types/dompurify": "^3.0.5",
    "@types/katex": "^0.16.8",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@types/react-router-dom": "^5.3.3",
    "@types/sharp": "^0.32.0",
    "@vitejs/plugin-react-swc": "^4.2.3",
    "@vitest/coverage-v8": "^4.0.18",
    "jsdom": "^28.0.0",
    "sharp": "^0.34.5",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "vite": "^7.2.4",
    "vitest": "^4.0.18"
  }
}
